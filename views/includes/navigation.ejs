
   <header>

    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <a class="navbar-brand" href="/">JEC Shop</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarCollapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link <%= path === '/' ? 'active' : '' %>" href="/">
                <i class="fa fa-home"></i> Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="<%= path === '/products' ? 'active' : '' %> nav-link" href="/products">
                <i class="fa fa-heart"></i> Products</a>
          </li>
          <% if (isAuthenticated) { %>
            <li class="nav-item">
                <a class="<%= path === '/cart' ? 'active' : '' %> nav-link" href="/cart">
                    <i class="fa fa-shopping-cart"></i> Cart</a>
            </li>
            <li class="nav-item">
                <a class="<%= path === '/orders' ? 'active' : '' %> nav-link" href="/orders">
                    <i class="fa fa-folder-open"></i> Orders</a>
            </li>
        <% } %>
        </ul>
        <ul class="navbar-nav ml-auto">
        <% if (!isAuthenticated) { %>
            <li class="nav-item">
                <a class="<%= path === '/login' ? 'active' : '' %> nav-link" href="/login">
                    <i class="fa fa-unlock-alt"></i> Login</a>
            </li>
            <li class="nav-item">
                <a class="<%= path === '/signup' ? 'active' : '' %> nav-link" href="/signup">
                    <i class="fa fa-user"></i> Signup</a>
            </li>
        <% } else { %>
            <li class="nav-item">
                <form action="/logout" method="post">
                    <button type="submit">
                            <i class="fa fa-share-square-o"></i> Logout</button>
                </form>
            </li>
        <% } %>
        </ul>
        <form class="form-inline mt-2 mt-md-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
      </div>
    </nav>

  </header>
